generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int      @id
  email         String   @unique
  username      String
  password      String
  role          String
  registration  String
  img_url       String?
}

model Event {
  id          Int      @id
  title       String
  description String
  start_date  DateTime
  end_date    DateTime
}

model Sprint {
  id          Int        @id
  title       String
  description String
  img_url     String?
  isLocked    Boolean    @default(true)
  material    Material[]
}

model Material {
  id        Int       @id
  title     String
  text      String
  sprint_id Int
  sprint    Sprint    @relation(fields: [sprint_id], references: [id])
}

