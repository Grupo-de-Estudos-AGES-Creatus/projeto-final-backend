generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int      @id
  email         String   @unique
  username      String
  password      String
  role          String
  matricula     String
  course        String?
  github        String?
  semester      String?
  n_of_absences Int?     @default(0)
  img_url       String?
  created_at    DateTime @default(now())
}

model Event {
  id         Int      @id
  title      String
  start_date DateTime
  end_date   DateTime
}

model Cards {
  id          Int        @id
  title       String
  description String?
  img_url     String?
  hidden      Boolean    @default(true)
  subtitle    String?
  material    Material[]
}

model Material {
  id          Int       @id
  name        String
  card_id     Int
  description String
  card        Cards     @relation(fields: [card_id], references: [id])
  content     Content[]
}

model Content {
  id          Int      @id
  type        String
  title       String
  url         String?
  material_id Int
  material    Material @relation(fields: [material_id], references: [id])
}
