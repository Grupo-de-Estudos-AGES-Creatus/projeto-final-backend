generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(cuid())
  email         String   @unique
  username      String
  password      String
  role          String
  matricula     String
  course        String?
  github        String?
  semester      String?
  n_of_absences Int? @default(0)
  img_url       String?
  created_at    DateTime @default(now())
  projects      Project[]
}

model Event {
  id         Int      @id
  title      String
  start_date DateTime
  end_date   DateTime
}

model Cards {
  id          Int        @id @default(autoincrement())
  title       String
  description String?
  img_url     String?
  hidden      Boolean    @default(true)
  subtitle    String?
  material    Material[]
}

model Material {
  id          Int       @id @default(autoincrement())
  name        String
  card_id     Int
  description String
  content     Content[]
  card        Cards     @relation(fields: [card_id], references: [id])
}

model Content {
  id          Int      @id @default(autoincrement())
  type        String
  title       String
  url         String?
  material_id Int
  material    Material @relation(fields: [material_id], references:Â [id])
}

model Project {
  id            Int @id @default(autoincrement())
  name          String
  description   String
  languages     String
  user_id       String 
  user          User @relation(fields: [user_id], references: [id])
  git_url       String
}