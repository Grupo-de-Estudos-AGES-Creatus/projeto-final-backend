generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int      @id @default(autoincrement())
  email         String   @unique
  username      String
  password      String
  role          String
  registration  String
  img_url       String?
  semester      String
  firstAcess    Boolean  @default(true)
  createdAt     DateTime @default(now())
  Projects      Projects[]
}

model Event {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  startDate   DateTime
  endDate     DateTime
}

model Sprint {
  id          Int        @id @default(autoincrement())
  title       String
  descriptionPath String
  projectId   Int
  img_url     String?
  isLocked    Boolean    @default(true)
  createdAt   DateTime
  material    Material[]
  projects    Projects[]
}

model Material {
  id        Int       @id @default(autoincrement())
  title     String
  text      String
  sprintId  Int
  sprint    Sprint    @relation(fields: [sprintId], references: [id])
}

model Projects {
  id        Int     @id @default(autoincrement())
  link      String
  userId    Int
  user      User    @relation(fields: [userId], references: [id])
  sprintId  Int 
  sprint    Sprint  @relation(fields: [sprintId], references: [id])
}
