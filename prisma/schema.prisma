generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String
  email         String    @unique
  password      String
  role          String
  //admin boolean
  matricula     String
  img_url       String?
  course        String?
  github        String?
  semester      String?
  resetToken    String    @default("")
  n_of_absences Int?      @default(0)
  created_at    DateTime  @default(now())
  projects      Project[]
}

model Event {
  id         Int      @id
  title      String
  start_date DateTime
  end_date   DateTime
}

model Cards {
  id          Int        @id @default(autoincrement())
  title       String
  subtitle    String?
  description String?
  img_url     String?
  hidden      Boolean    @default(true)
  material    Material[]
}

model Material {
  id          Int       @id @default(autoincrement())
  name        String
  description String
  card_id     Int
  card        Cards     @relation(fields: [card_id], references: [id])
  content     Content[]
}

model Content {
  id          Int      @id @default(autoincrement())
  title       String
  type        String
  url         String
  material_id Int
  material    Material @relation(fields: [material_id], references: [id])
}

model Project {
  id      Int    @id @default(autoincrement())
  link    String @unique
  type    String
  user_id String
  user    User   @relation(fields: [user_id], references: [id])
}
